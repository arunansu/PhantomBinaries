<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo">
                        <img src="/assets/images/logo.png" alt="">
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav @NavMenuCssClass">
                        <li><a class="NavLink @activeHome" href="/">Home</a></li>
                        <li><a class="NavLink @activeAbout" href="about">About</a></li>
                        <li><a class="NavLink @activeContact" href="contact">Contact</a></li>
                    </ul>   
                    <a class='menu-trigger @NavMenuToggleCssClass' @onclick="ToggleNavMenu">
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>

@code {

    private bool collapseNavMenu = false;

    private string? activeHome => collapseNavMenu ? "toggleBlock" : null;
    private string? activeAbout => collapseNavMenu ? "toggleBlock" : null;
    private string? activeContact => collapseNavMenu ? "toggleBlock" : null;
    private string? NavMenuCssClass => collapseNavMenu ? "toggleBlock" : null;
    private string? NavMenuToggleCssClass => collapseNavMenu ? "active" : null;


    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
